<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Wiki</title>
    <style type="text/css">
        body {
            width: 60%;
            margin: 0 auto;
            padding: 2em;
            font-family: 'Segoe UI',
                "Microsoft Yahei Light",
                "San Francisco",
                "Ping Fang SC",
                "Roboto",
                "Noto Sans CJK",
                Tahoma, Geneva, Verdana, sans-serif;
        }

        a {
            text-decoration: none;
            color: cornflowerblue;
        }

        a:visited {
            color: cornflowerblue;
        }

        a:hover {
            color: darkgray;
        }

        .tags ul,
        footer ul {
            padding: 0;
            display: inline;
        }

        .tags li,
        footer li {
            display: inline;
            border-right: 1px solid black;
            padding: 0 1em;
        }

        .tags li:last-child,
        footer li:last-child {
            border: none;
        }

        .post-list h3 {
            margin: 0.3em 0;
        }
    </style>
</head>

<body>

    <header>
        <% if (locals.title) { %>
            <h1><%- title %></h1>
        <% } else { %>
            <h1>Wiki</h1>
        <% } %>
        <span>Author: <a href="/about">KimmyLeo</a></span>
        <span>2011-11-11</span>
        <% if(locals.tags) { %>
        <div class="tags"><span>标签：</span>
            <ul>
                <% tags.forEach(e => { %>
                <li><%= e %></li>
                <% }) %>
            </ul>
        </div>
        <% }  /*if tags*/ %>
    </header>
    <article>
        <%- body %>
        <% if(file.endsWith("README.md")) { %>

            <h2>当前类目下的页面：</h2>
            
        <ul class="post-list">
            <% posts.forEach(p => { %>
                <li><h3><a href="/<%- p.filePath %>"><%- p.title ? p.title : p.fileName %></a><small> <%- p.date ? p.date : "" %> </small></h3></li>
            <% }) %> 
        </ul>
        <% } %>

    </article>
    <div>
        <h5>See Also</h5>
        <ul>
            <li><a href="/about">About Me</a></li>
        </ul>
    </div>
    <hr>
    <footer>
        <ul>
            <li><a href="/about">关于我</a></li>
            <li><a href="/site.xml">站点地图</a></li>
            <li><a href="/rss.xml">RSS</a></li>
            <li>Copyright &copy; KimmyLeo</li>
        </ul>
    </footer>
</body>

</html>